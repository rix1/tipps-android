<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fitsSystemWindows="true"
        tools:context="no.tipps.tipps.Vipps"
        android:id="@+id/background"
        android:background="@drawable/vippsbackground">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_bar_height"
            android:background="@color/green1"/>

    <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:background="@drawable/profilepic"
            android:layout_marginTop="70dp"
            android:layout_marginStart="150dp"/>

    <ImageView
            android:layout_width="85dp"
            android:layout_height="31dp"
            android:background="@drawable/vippslogo"
            android:layout_marginTop="20dp"
            android:layout_marginStart="150dp"/>

    <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/cogwheel"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>

    <TextView
            android:id="@+id/name"
            android:text="@string/username"
            android:layout_width="200dp"
            android:layout_height="20dp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="170dp"/>

    <ImageButton
            android:id="@+id/tippsButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="18dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/tipps"/>
</android.support.design.widget.CoordinatorLayout>
